@prefix sh:   <http://www.w3.org/ns/shacl#> .
@prefix xsd:  <http://www.w3.org/2001/XMLSchema#> .
@prefix dcat: <https://www.w3.org/ns/dcat#> .
@prefix dct:  <http://purl.org/dc/terms/> .
@prefix prov: <http://www.w3.org/ns/prov#> .

###########
# Dataset #
###########
:DatasetShape a sh:NodeShape ;
  sh:targetClass dcat:Dataset ;
  sh:property [
    sh:path dct:title ; sh:datatype xsd:string ; sh:minCount 1 ; sh:maxCount 1
  ] ;
  sh:property [
    sh:path dct:description ; sh:datatype xsd:string ; sh:minCount 1
  ] ;
  sh:property [
    sh:path dct:creator ;
    sh:or ( [ sh:nodeKind sh:IRI ] [ sh:datatype xsd:string ] ) ;
    sh:minCount 1
  ] ;
  sh:property [
    sh:path dct:publisher ;
    sh:or ( [ sh:nodeKind sh:IRI ] [ sh:datatype xsd:string ] )
  ] ;
  sh:property [
    sh:path dct:license ; sh:nodeKind sh:IRI ; sh:minCount 1 ; sh:maxCount 1
  ] ;
  sh:property [
    sh:path dct:issued ; sh:datatype xsd:date ; sh:minCount 1 ; sh:maxCount 1
  ] ;
  sh:property [
    sh:path dcat:distribution ; sh:nodeKind sh:IRI ; sh:minCount 1
  ] .

########################################
# Distribution – Original (Kaggle CSV) #
########################################
:OriginalDistributionShape a sh:NodeShape ;
  sh:targetClass dcat:Distribution ;
  sh:property [
    sh:path dct:title ; sh:datatype xsd:string ; sh:minCount 1
  ] ;
  sh:property [
    sh:path dcat:mediaType ; sh:datatype xsd:string ; sh:minCount 1
  ] ;
  sh:property [
    sh:path dcat:downloadURL ; sh:nodeKind sh:IRI ; sh:minCount 1
  ] ;
  sh:property [
    sh:path prov:wasDerivedFrom ; sh:nodeKind sh:IRI ; sh:minCount 1
  ] ;
  sh:property [
    sh:path dct:license ; sh:nodeKind sh:IRI
  ] .

########################################
# Distribution – RDF (FAIRified)       #
########################################
:RDFDistributionShape a sh:NodeShape ;
  sh:targetClass dcat:Distribution ;
  sh:property [
    sh:path dct:title ; sh:datatype xsd:string ; sh:minCount 1
  ] ;
  sh:property [
    sh:path dcat:mediaType ; sh:datatype xsd:string ; sh:minCount 1
  ] ;
  sh:property [
    sh:path dcat:downloadURL ; sh:nodeKind sh:IRI
  ] ;
  sh:property [
    sh:path dct:conformsTo ; sh:nodeKind sh:IRI ; sh:minCount 1
  ] ;
  sh:property [
    sh:path dct:issued ; sh:datatype xsd:date
  ] .
